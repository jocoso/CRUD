<!-- Form -->
<form action="/api/pets" method="POST" id="add_pet">
    <div class="new_pet">
        
        <div class="form-group">
            <label for="name" class="text-light">Pet Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="">
        </div>

        <div class="form-group">
            <label for="img" class="text-light">Picture</label>
            <input type="text" name="img" value="">
        </div>

        <div class="radio inline" name="specie">
            
            <label for="specie" class="text-light">Specie</label>
            
            <input type="radio" id="radio-1" name="specie" value="Lizard">
            <label for="radio-1" class="radio-label">Lizard</label>
            
            <input type="radio" id="radio-2" name="specie" value="Cat">
            <label for="radio-2" class="radio-label">Cat</label>

            <input type="radio" id="radio-3" name="specie" value="Dog">
            <label for="radio-3" class="radio-label">Dog</label>

            <input type="radio" id="radio-4" name="specie" value="Spider">
            <label for="radio-4" class="radio-label">Spider</label>

            <input type="radio" id="radio-5" name="specie" value="Hamster">
            <label for="radio-5" class="radio-label">Hamster</label>

        </div>

        <div class="form-group">
            <input type="checkbox" name="friendly" value="true">
            <label for="friendly"> Is Friendly? </label>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Introduce</button>
        </div>

    </div>
    
</form>