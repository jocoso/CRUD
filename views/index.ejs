<!-- Including header -->
    <%- include('include/_header') %>
<!-- /Including header -->

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-pet" class="border-shadow">

                <span class="text-gradient">New Pet <i class="fa fa-paw" aria-hidden="true"></i></span>

            </a>
        </div>

        <!-- Form -->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Pet Name</th>
                        <th>Profile Picture</th>
                        <th>Species</th>
                        <th>Friendly</th>
                        <th>Active</th>
                    </tr>
                </thead>
                <tbody>
                    <%- include('include/_card') %>
                </tbody>
            </table>
        </form>
    </div>
</main>

<!-- Including footer -->
    <%- include('include/_footer') %>
